<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="container">
    <h1><%= title %></h1>

    <div class="row">
      <div class="col-md-6">
        <form action="/posts" method="POST">
          <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" class="form-control" required>
          </div>
          <div class="form-group">
            <label for="content">Content:</label>
            <textarea id="content" name="content" rows="4" class="form-control" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Create Post</button>
        </form>
      </div>
      <div class="col-md-6"> 
        <ul>
          <% posts.forEach(post => { %>
            <li>
              <h3><%= post.title %></h3>
              <p><%= post.content %></p>
              <a href="/posts/<%= post.id %>/edit" class="btn-edit">Edit</a>
              <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" style="display: inline-block;">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form> 
            </li>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>

</body>
</html>